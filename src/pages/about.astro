---
import { TextSection } from '@littlesticks/odyssey-theme-components';
import Layout from './../layouts/Page.astro';
import HeroSection from '../components/sections/heros/HeroSection.astro';

import { footerSocials } from '../config/footer';

import { Icon } from 'astro-icon';

const seo = {
	title: 'About | Kieran Wood | Philosophy',
	description: 'About Page',
};
---

<Layout {seo}>
	<HeroSection>
		<div slot="text-container">
			<h1>About Me!</h1>
			<p>
				I'm a computer science major, with a minor in philosophy. I am particularly fond of existentialism, political philosophy, and rambling.
        <br/>
        <ul>
          <li>🍁 & 💂: Canadian & British</li>
          <li>🏫: University of Calgary</li>
          <li>🎿: Skiier</li>
          <li>🤿: Scuba Diver</li>
          <li>📷: Photographer</li>
          <li>🖼️: 3D Artist</li>
          <li>🖥️: Coder</li>
        </ul>
			</p>
      <h3 style="text-align:center;">Reach out!</h3>
    <div class="about-socials__list" style="justify-content: center">
      {
        footerSocials.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="about__link"
              title={`Open ${social.name} profile`}
            >
              <Icon name={social.icon} width="24px" height="24px" />
            </a>
        ))
      }
    </div>
		</div>
    <picture slot="image-container">
      <img
        src="/philosophy/profile.jpg"
        alt="Astro Odyssee"
        id="home-hero-image"
      />
    </picture>
	</HeroSection>
</Layout>


<style>
  .about-socials__list {
    margin: 1rem 0;
    padding: 0;
    display: flex;
    list-style: none;
  }
  .about__link{
    padding:0 1rem;
  }
  .about__link > *{
    width: 100%;
    height: 36px;

  }
</style>